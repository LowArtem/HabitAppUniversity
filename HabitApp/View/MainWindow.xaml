<UserControl x:Class="HabitApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitApp"
        DataContext="{Binding Path=MainVM, Source={StaticResource VMLocator}}"
        Height="500"
        Width="500"             
        mc:Ignorable="d">
    <Grid Background="White">
        <TextBlock Text="Main page" FontSize="40" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Path=Text}" FontSize="40" VerticalAlignment="Top" Margin="0, 70, 0, 0"/>
    </Grid>
</UserControl>
